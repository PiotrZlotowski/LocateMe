<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <!-- parent layout begin -->
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorCream"
            android:orientation="vertical"
            tools:context=".MainActivity">
        <!-- parent layout end -->

        <!-- begin of child layout -->
        <LinearLayout
                android:id="@+id/btn_help_layout"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:gravity="center"
                android:orientation="vertical">

            <Button
                    android:id="@+id/btn_help"
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:gravity="center"
                    android:text="HELP"
                    android:textColor="@color/colorBrown"

                    android:shadowColor="@color/colorShade"
                    android:shadowRadius="9"
                    android:shadowDx="1"
                    android:shadowDy="1"

                    android:textSize="130dp"
                    android:background="@drawable/roundbutton"
                    android:visibility="visible"/>
        </LinearLayout>

        <!-- begin of another child layout -->

        <LinearLayout
                android:id="@+id/btn_start_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <ToggleButton
                    android:id="@+id/btn_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="START"
                    android:textOn="STOP"
                    android:textSize="72dp"
                    android:background="@drawable/rectanglebutton"
                    android:gravity="center"

                    android:shadowColor="@color/colorShade"
                    android:shadowRadius="9"
                    android:shadowDx="1"
                    android:shadowDy="1"

                    android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

    <!--&lt;!&ndash; this can go away later &ndash;&gt;-->
    <!--<android.support.design.widget.FloatingActionButton-->
    <!--android:id="@+id/fab"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="bottom|end"-->
    <!--android:layout_margin="@dimen/fab_margin"-->
    <!--app:srcCompat="@android:drawable/ic_dialog_email"/>-->

</android.support.design.widget.CoordinatorLayout>